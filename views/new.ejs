<%- include("partials/header") %>

<div class="container">
	<h1 class="text-center mt-4 mb-3">Create a New Blog</h1>
	<form action="/blogs" method="POST" style="width: 100%; max-width: 600px; margin: auto;" class="border p-4">
		<div class="form-group">
			<label><h4>Title</h4></label>
			<input type="text" name="blog[title]" placeholder="Title" class="form-control">
		</div>
		<div class="form-group">
			<label><h4>Image URL</h4></label>
			<input type="text" name="blog[image]" placeholder="Image" class="form-control">
		</div>
		<div class="form-group">
			<label><h4>Blog Content</h4></label>
			<textarea name="blog[body]" style="width: 100%; height: 200px;"></textarea>
		</div>
		<button class="btn btn-primary btn-block">Create Blog </button>
	</form>
</div>

<%- include("partials/footer") %>
