<%- include("partials/header") %>

<div class="container" style="max-width: 850px; margin: auto;">
		<% blogs.forEach(function(blog){ %>
			<div class="border m-4 p-3">
				<div class="row">
					<div class="col-4">
						 <img src="<%= blog.image %>" class="card-img-top">
					</div>
					<div class="col-8">
						<h2><%= blog.title %></h2>
						<p><%- blog.body.substring(0,100) %> ...</p>
						<span><strong><em>Posted by <%=blog.user%>, <%= blog.created.toDateString() %></em></strong></span>
						<a href="/blogs/<%= blog._id %>" class="btn btn-outline-success m-0" style="float: right;">View More <i class="fas fa-chevron-right ml-1"></i></a>
					</div>
				</div>
			</div>	
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>
